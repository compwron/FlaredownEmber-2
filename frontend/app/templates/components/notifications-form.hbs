{{#form-for for=model onSubmit="saveProfile"}}

  {{#form-field for="notify" class="checkbox" label="Email me when someone responds to my posts"}}
    {{input
      type="checkbox"
      checked=(mut model.notify)
      bgColorClass="colorable-bg-35"
    }}
  {{/form-field}}

{{!--   {{#form-field for="notify_top_posts" label="Email me about weekly top posts"}}
    {{label-switch
      checked=(mut model.notifyTopPosts)
      bgColorClass="colorable-bg-35"
    }}
  {{/form-field}} --}}


  {{#if showReminder}}
    {{add-reminder model=model title="Should we remind you to check in?"}}
  {{/if}}

  {{#unless forOnboarding}}
    <br>
    {{input type="submit" value=(if isLoading "Saving..." "Save") disabled=isLoading}}
  {{/unless}}

{{/form-for}}
