#!/usr/bin/env ruby

def shut_down
  puts "\nShutting down gracefully..."
  sleep 1
end

# Trap ^C
Signal.trap("INT") do
  shut_down
  exit
end

# Trap `Kill `
Signal.trap("TERM") do
  shut_down
  exit
end

if ENV["LOCALTUNNEL_ENABLED"] && ENV["LOCALTUNNEL_ENABLED"].eql?("true")
  begin
    system "lt --port #{ENV["LOCALTUNNEL_PORT"]} --subdomain #{ENV["LOCALTUNNEL_SUBDOMAIN"]}"
  rescue => e
    puts e.message
    retry
  end
else
  loop do
    sleep 0.5
  end
end
