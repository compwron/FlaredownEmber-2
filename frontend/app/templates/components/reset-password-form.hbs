<h4>{{resetPassMessage}}</h4>

{{#form-for onSubmit="resetPassword"}}
  <div class="form-field">
    <label for="identification">Email</label>
    {{input value=model.email placeholder="name@domain.com" class="form-control"}}
  </div>

  {{#link-to "login"}}Back to Login{{/link-to}}
  {{input type="submit" class="btn btn-primary right" value="Reset your password"}}
{{/form-for}}
