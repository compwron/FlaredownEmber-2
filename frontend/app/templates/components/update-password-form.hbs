{{#form-for for=model onSubmit="updatePassword"}}

  {{#if session.isAuthenticated}}
    {{#form-field for="currentPassword" label="Current password"}}
      {{input type="password" value=model.currentPassword placeholder="Current password" class="form-control"}}
    {{/form-field}}
  {{/if}}

  {{#form-field for="password" label="New Password"}}
    {{input type="password" value=model.password placeholder="New Password" class="form-control"}}
  {{/form-field}}

  {{#form-field for="passwordConfirmation" label="Password Confirmation"}}
    {{input type="password" value=model.passwordConfirmation placeholder="Password Confirmation" class="form-control"}}
  {{/form-field}}

  {{#unless session.isAuthenticated}}
    {{#link-to "login"}}Back to Login{{/link-to}}
  {{/unless}}

  {{input type="submit" class="btn btn-primary" value=(if isLoading "Updating..." "Update your password") disabled=isLoading}}
{{/form-for}}
