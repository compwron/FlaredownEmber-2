{{#power-select
  options=yearsArray
  onchange=(action (mut birthDate.year))
  selected=birthDate.year
  placeholder="Year"
  as |year|}}
  {{year}}
{{/power-select}}

{{#power-select
  options=months
  onchange=(action (mut birthDate.month))
  selected=birthDate.month
  placeholder="Month"
  as |month|}}
  {{month}}
{{/power-select}}

{{#power-select
  options=daysArray
  onchange=(action (mut birthDate.day))
  selected=birthDate.day
  disabled=disabledDays
  placeholder="Day"
  as |day|}}
  {{day}}
{{/power-select}}
